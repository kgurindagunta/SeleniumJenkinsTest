pipeline {
    agent any

    environment {
        CONFIG_SOURCE = "C:/Users/kgurindagunta/Downloads/config.properties"
        CONFIG_TARGET = "src/main/resources/config.properties"
    }

    stages {
        stage('Checkout from GitHub') {
            steps {
                echo "üîÑ Cloning repository..."
                git branch: 'master', url: 'https://github.com/kgurindagunta/SeleniumJenkinsTest.git'
            }
        }

        stage('Copy config.properties') {
            steps {
                echo "üìÑ Copying config.properties into workspace..."
                bat """
                    if not exist "src\\main\\resources" mkdir "src\\main\\resources"
                    copy "${CONFIG_SOURCE}" "${CONFIG_TARGET}" /Y
                """
                bat 'type "src\\main\\resources\\config.properties"'
            }
        }

        stage('Build & Run Tests') {
            steps {
                echo "üöÄ Running Maven build and TestNG tests..."
                bat "mvn clean test"
            }
        }

        stage('Publish Extent Report') {
            steps {
                echo "üìä Publishing Extent HTML Report..."
                publishHTML(target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: '/target/extentReports/index.html',
                    reportFiles: 'index.html',
                    reportName: 'Extent Reports'
                ])
            }
        }
    }

    post {
        always {
            echo "üßπ Cleaning up workspace..."
            deleteDir()
        }

        success {
            echo "‚úÖ Build Successful! Sending email..."
            emailext (
                subject: "‚úÖ Jenkins Build Successful - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                <h2>Build Passed</h2>
                <p>Project: ${env.JOB_NAME}</p>
                <p>Build Number: ${env.BUILD_NUMBER}</p>
                <p>Check the <a href="${env.BUILD_URL}Extent_Reports/">Extent Report</a>.</p>
                """,
                to: "your-email@example.com",
                mimeType: 'text/html'
            )
        }

        failure {
            echo "‚ùå Build Failed! Sending email..."
            emailext (
                subject: "‚ùå Jenkins Build Failed - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                <h2>Build Failed</h2>
                <p>Project: ${env.JOB_NAME}</p>
                <p>Build Number: ${env.BUILD_NUMBER}</p>
                <p>Check the <a href="${env.BUILD_URL}console">Jenkins Console Logs</a>.</p>
                """,
                to: "gurindaguntakiran@gmail.com",
                mimeType: 'text/html'
            )
        }
    }
}